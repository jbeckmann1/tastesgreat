<%- include("../partials/header") %>
</div>
<div class="container">
	<form id="rezept" action="/recipes/<%= recipe._id%>?_method=PUT" method="POST">
		<div class="row">
			<div class="col-md-12">
				<h1>
					Neues Rezept
				</h1>
				<div class="input">
					<label>Titel:</label>
					<input
						autofocus
						type="text"
						value="<%=recipe.title%>"
						name="recipe[title]"
						placeholder="Wie lautet der Rezepttitel?"
					/>
				</div>
				<div class="input">
					<label>Kurzbeschreibung:</label>
					<textarea
						value="<%=recipe.shortdescription%>"
						name="recipe[shortdescription]"
						cols="40"
						rows="3"
					></textarea>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<label>
					Zutaten:
				</label>

				<div id="zutaten">
					<fieldset id="add_zutat">
						<div class="row">
							<div class="col-md-5">
								<input
									type="text"
									id="name"
									value="<%=recipe.name%>"
									name="recipe[name]"
									placeholder="Name"
								/>
							</div>

							<div class="col-md-3">
								<input
									type="text"
									id="menge"
									value="<%=recipe.name%>"
									name="recipe[menge]"
									placeholder="Menge"
								/>
							</div>

							<div class="col-md-4">
								<div class="input-select">
									<select
										id="einheit"
										value="<%=recipe.einheit%>"
										name="recipe[einheit]"
									>
										<option selected="" value="Default">Einheit</option>
										<option value="g">g</option>
										<option value="Stück">Stück</option>
										<option value="EL">EL</option>
										<option value="TL">TL</option>
									</select>
								</div>
							</div>
						</div>
					</fieldset>
				</div>

				<span onclick="newElement()" class="btn__text Add btn btn--lg"
					><i class="fas fa-plus"></i> Zutat</span
				>
			</div>
			<div class="col-md-6">
				<label>Kategorie:</label>
				<div class="input-select">
					<select name="recipe[kategorie]">
						<option selected="" value="<%=recipe.kategorie%>Default"
							>Wähle eine Option</option
						>
						<option value="frühstück">Frühstück</option>
						<option value="mittag">Mittag</option>
						<option value="abend">Abend</option>
						<option value="snack">Snack</option>
					</select>
				</div>
				<label>Schwierigkeit</label>
				<div class="input-select">
					<select name="recipe[schwierigkeit]">
						<option selected="" value="<%=recipe.schwierigkeit%>"
							>Wähle eine Option</option
						>
						<option value="Einfach">Einfach</option>
						<option value="Mittel">Mittel</option>
						<option value="Schwer">Schwer</option>
					</select>
				</div>
				<div class="input">
					<label>Dauer:</label>
					<input
						type="text"
						value="<%=recipe.dauer%>"
						name="recipe[dauer]"
						placeholder="Wieviel Zeit muss man einplanen?"
					/>
				</div>
				<div class="input">
					<label>Aktive Arbeitszeit:</label>
					<input
						type="text"
						value="<%=recipe.aktivearbeitszeit%>"
						name="recipe[aktivearbeitszeit]"
						placeholder="Wie lange ist die aktive Arbeitszeit?"
					/>
				</div>
				<div class="col-md-3 input-checkbox input-checkbox--switch">
					Vegetarisch
					<input
						id="checkbox-switch"
						type="checkbox"
						value="<%=recipe.vegetarisch%>"
						name="recipe[vegetarisch]"
					/>
					<label for="checkbox-switch"></label>
				</div>

				<div class="col-md-3 input-checkbox input-checkbox--switch">
					Vegan
					<input
						id="checkbox-switch2"
						type="checkbox"
						value="<%=recipe.vegan%>"
						name="recipe[vegan]"
					/>
					<label for="checkbox-switch2"></label>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div id="schritte">
					<label>
						Schritte:
					</label>
					<textarea
						value=""
						name="recipe[schritte]"
						cols="40"
						rows="2"
						placeholder="Was ist der erste Schritt?"
					></textarea>
				</div>
				<span onclick="newSchritt()" class="btn__text Add btn btn--lg"
					><i class="fas fa-plus"></i> Schritt</span
				>
				<div class="input">
					<label>Bild:</label>
					<input
						type="text"
						value="<%=recipe.image%>"
						name="recipe[image]"
						placeholder="Wie lautet die URL des Bildes?"
					/>
				</div>
				<div class="col-md-3 input-checkbox input-checkbox--switch">
					Öffentliches Rezept:
					<input
						id="checkbox-switch3"
						type="checkbox"
						value="<%=recipe.isOnline%>"
						name="recipe[isOnline]"
					/>
					<label for="checkbox-switch3"></label>
				</div>
				<div class="text-center">
					<button class="Add2 btn--lg btn display-center">
						<span class="btn__text">Rezept hinzufügen</span>
					</button>
				</div>
			</div>
		</div>
	</form>
</div>
<%- include("../partials/footer") %>