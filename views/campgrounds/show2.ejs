<%- include("../partials/header") %>
<script type="text/javascript">
google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Makronährstoffe', 'Anteil (in Prozent)'],
          ['Kohlenhydrate',  <%=campground.nährwerte.kohlenhydrate%>],
          ['Proteine',  <%=campground.nährwerte.proteine%>],
          ['Fett', <%=campground.nährwerte.fette%>],
        
        ]);

      var options = {
        legend: 'none',
        pieSliceText: 'label',
        title: 'Makronährstoffe',
        pieStartAngle: 0,
      };

        var chart = new google.visualization.PieChart(document.getElementById('piechart'));
        chart.draw(data, options);
		
      }</script>
             <section class="cover height-80 imagebg text-center parallax" data-overlay="5">
